  "version": "2.0.0",
  "tasks": [
    {
      "label": "mix: db reset",
      "type": "shell",
      "command": "mix ecto.drop",
      "problemMatcher": ["$erlang"]
    },
    {
      "label": "mix: db init",
      "type": "shell",
      "command": "mix ecto.setup",
      "problemMatcher": ["$erlang"]
    },
    {
      "label": "mix: db migrate",
      "type": "shell",
      "command": "mix ecto.migrate",
      "problemMatcher": ["$erlang"]
    },
    {
      "label": "mix: run",
      "type": "shell",
      "command": "mix phx.server",
      "problemMatcher": ["$erlang"]
    },
    {
      "label": "mix: run dev",
      "type": "shell",
      "command": "mix phx.server dev",
      "problemMatcher": ["$erlang"]
    },
    {
      "label": "mix: run test",
      "type": "shell",
      "command": "mix phx.server test",
      "problemMatcher": ["$erlang"]
    },
    {
      "label": "mix: dependancy get",
      "type": "shell",
      "command": "mix deps.get",
      "problemMatcher": ["$erlang"]
    },
    {
      "label": "mix: compile",
      "type": "shell",
      "command": "mix deps.compile",
      "problemMatcher": ["$erlang"]
    }
  ]
}
